<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="6dp"
    android:layout_height="80dp">



    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/stthoadon"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:textSize="20dp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:text="1"/>
        <View
            android:id="@+id/daugach1"
            android:layout_gravity="center"
            android:layout_width="1.5dp"
            android:layout_toRightOf="@id/stthoadon"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hoadon"
            android:textColor="#000"
            android:text="Mã hóa đơn: "
            android:padding="2dp"
            android:layout_toRightOf="@id/daugach1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mahoadon_1row"
            android:text="Mã hóa đơn: "
            android:textAllCaps="true"
            android:padding="2dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/hoadon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ngaythem"
            android:layout_below="@id/hoadon"
            android:textColor="#000"
            android:text="Ngày xuất hóa đơn: "
            android:padding="2dp"
            android:layout_toRightOf="@id/daugach1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ngaythem_1row"
            android:text="ngày thêm hóa đơn "
            android:padding="2dp"
            android:layout_below="@id/hoadon"
            android:layout_toRightOf="@id/ngaythem" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtmadt_them_hoadon"
            android:layout_below="@id/ngaythem"
            android:textColor="#000"
            android:text="Mã điện thoại "
            android:padding="2dp"
            android:layout_toRightOf="@id/daugach1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtmadt_them_1row_hoadon"
            android:text="Mã điện thoại"
            android:padding="2dp"
            android:layout_below="@id/ngaythem_1row"
            android:layout_toRightOf="@id/ngaythem" />

        <ImageView
            android:id="@+id/imv_hoadonct"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/hoadon" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
