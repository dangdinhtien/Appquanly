<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edtStt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Mã lương"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/edtSongaylam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Số ngày làm"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/spnManv"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/spnManv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtStt" />

    <Button
        android:id="@+id/btnThem"
        android:layout_width="147dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:onClick="addLuong"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:text="THÊM"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtSongaylam" />

    <Button
        android:id="@+id/btnHuy"
        android:layout_width="142dp"
        android:layout_height="46dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:onClick="thoat"
        android:text="HỦY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnThem"
        app:layout_constraintTop_toBottomOf="@+id/edtSongaylam" />

</androidx.constraintlayout.widget.ConstraintLayout>