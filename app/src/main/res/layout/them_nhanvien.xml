<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Mã: "
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:textSize="24dp"/>
    <EditText
        android:id="@+id/them_MaNV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Nhập mã"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Tên: "
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:textSize="24dp"/>
    <EditText
        android:id="@+id/them_TenNV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Nhập tên"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">
        <TextView
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Ngày Sinh: "
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:textSize="24dp"/>
    <EditText
        android:id="@+id/them_NgaySinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_marginTop="10dp"
        android:hint="dd/mm/yyyy"/>
        <Button
            android:id="@+id/chonngaysinh"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="chon"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:layout_weight="1"
            android:onClick="ngaysinh"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">
        <TextView
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Ngày Vào Làm: "
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:textSize="24dp"/>
        <EditText
            android:id="@+id/them_NgayVaoLam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginTop="10dp"
            android:hint="dd/mm/yyyy"/>
        <Button
            android:id="@+id/chonngaylam"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:text="chon"
            android:layout_weight="1"
            android:onClick="ngaysinh"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Số Điện Thoại: "
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:textSize="24dp"/>

    <EditText
        android:id="@+id/them_SDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Nhập số điện thoại"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Lương Cơ Bản: "
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:textSize="24dp"/>
    <EditText
        android:id="@+id/them_Luongcoban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Nhập lương cơ bản"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp">

        <Button
            android:id="@+id/btn_ThemNV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:onClick="them"
            android:text="thêm" />

        <Button
            android:id="@+id/btn_Huy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:onClick="huy"
            android:text="hủy" />
    </LinearLayout>
</LinearLayout>